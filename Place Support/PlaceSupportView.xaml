<Window x:Class="DnBim_Tool.Place_Support.PlaceSupportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnBim_Tool.Place_Support"
             mc:Ignorable="d" 
                  Height="320"
            Width="300" Title="Place Support"
            ShowInTaskbar="True"
            ResizeMode="NoResize"
            WindowStartupLocation="CenterScreen"
                    KeyDown="Window_KeyDown"
        
        >
    <Grid>

        <TabControl  
    x:Name="tabControl"
 HorizontalAlignment="Left"
 VerticalAlignment="Top">

            <TabItem Header="Pipe" Width="70" Background="Yellow">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Duct" Width="70" Background="Yellow">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem Header="Cable Tray" Width="70" Background="Yellow">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment ="Top" Margin="0 5 0 0">

            <GroupBox Header="Setting" Width="280" Height="210" BorderBrush="Gray" Margin="0 30 0 0">

                <StackPanel Margin="0 10 0 0">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                        <Label Content="Family" Width="60"/>
                        <ComboBox x:Name="cbbFamily" Width="200" SelectionChanged="cbbFamily_SelectionChanged"  />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <Label Content="Type" Width="60"/>
                        <ComboBox x:Name="cbbType" Width="200"   />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <Label Content="Option" Width="60"/>
                        <ComboBox x:Name="cbbOption" Width="200"  />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <Label Content="Distance (mm)" Width="110"/>
                        <TextBox x:Name="tbdtt" Width="150" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <Label Content="Offset (mm)" Width="110"/>
                        <TextBox x:Name="tbOffset" Width="150" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

                    </StackPanel>

                </StackPanel>
            </GroupBox>




        </StackPanel>

        <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 5">
            <Button x:Name="btOk" Width="80" Content="OK" Margin="0 0 5 0" Click="btOk_Click" />
            <Button x:Name="btCancel" Width="80" Content="Cancel" Click="btCancel_Click" />
        </StackPanel>

    </Grid>
</Window>
